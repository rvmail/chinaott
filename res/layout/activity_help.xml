    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical"
        android:layout_margin="30dp">

         <TextView
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:background="@drawable/home_golive_logo" />
         
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/gy_blue"
             android:textSize="22dp"
             android:layout_marginLeft="5dp"
             android:text="〈 更多/帮助"/>

         
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  " />

        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="账户：21921"
            android:textColor="@color/gy_blue" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="余额：-19.00"
            android:layout_marginLeft="10dp"
            android:textColor="@color/yellow" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="14:46"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gy_text" />
        
        
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/help_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="http://www.golive-tv.com"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/help_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="客服电话：4001876867(9-21点)QQ：4066337"
        android:textColor="@color/white"
