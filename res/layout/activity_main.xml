<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_black"
    android:orientation="vertical"
    tools:context="www.chinaott.net.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_about_golive_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  " />

        <Button
            android:id="@+id/sj_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_alibuybutton"
            android:gravity="center"
            android:text="升级会员"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="账户：21921"
            android:textColor="@color/deongaree" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:visibility="visible" >

        <www.chinaott.net.gallery.GalleryFlow
            android:id="@+id/Gallery01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_world" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sf_test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:visibility="gone" >

        <ListView
            android:id="@+id/listViewId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/ll_yh_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/yh_cz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_bottomfouc"
                android:text="充值"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/yh_hy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_bottomfouc"
                android:text="全球播会员"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/yh_xx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_bottomfouc"
                android:text="我的信息"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/yh_qb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_bottomfouc"
                android:text="我的钱包"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/yh_gd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_bottomfouc"
                android:text="更多"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yh_cz"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="8dp"
            android:layout_weight="4"
            android:background="@color/ov_bg"
            android:orientation="horizontal"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" >

                <TextView
                    android:id="@+id/cz_tv_cz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/cz_tv_zh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cz_tv_cz"
                    android:text="账户: "
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/cz_tv_zh_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cz_tv_cz"
                    android:layout_toRightOf="@id/cz_tv_cz"
                    android:text="21321540"
                    android:textColor="@color/tab_blue"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/cz_tv_bz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cz_tv_zh"
                    android:text="币种: "
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/cz_tv_bz_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cz_tv_zh"
                    android:layout_toRightOf="@id/cz_tv_cz"
                    android:text="RMB(人民币)"
                    android:textColor="@color/tab_red"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/cz_tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cz_tv_bz"
                    android:text="金额: "
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <RelativeLayout
                    android:id="@+id/rl_first"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/cz_tv_bz"
                    android:layout_toRightOf="@id/cz_tv_money"
                    android:background="@drawable/bg_alibuybutton"
                    android:focusable="true" >

                    <ImageView
                        android:id="@+id/first_iv_smallicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/setting_lg_no_selected_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="￥200"
                        android:textColor="@color/tab_yellow"
                        android:textSize="20dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_second"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/cz_tv_bz"
                    android:layout_toRightOf="@id/rl_first"
                    android:background="@drawable/bg_alibuybutton"
                    android:focusable="true" >

                    <ImageView
                        android:id="@+id/second_iv_smallicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/setting_lg_no_selected_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="￥50"
                        android:textColor="@color/tab_yellow"
                        android:textSize="20dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_third"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/cz_tv_bz"
                    android:layout_toRightOf="@id/rl_second"
                    android:background="@drawable/bg_alibuybutton"
                    android:focusable="true" >

                    <ImageView
                        android:id="@+id/third_iv_smallicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/setting_lg_no_selected_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="￥20"
                        android:textColor="@color/tab_yellow"
                        android:textSize="20dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_fourth"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignLeft="@id/rl_first"
                    android:layout_below="@id/rl_first"
                    android:background="@drawable/bg_alibuybutton"
                    android:focusable="true" >

                    <ImageView
                        android:id="@+id/fourth_iv_smallicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/setting_lg_no_selected_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="￥10"
                        android:textColor="@color/tab_yellow"
                        android:textSize="20dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_fif"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignLeft="@id/rl_second"
                    android:layout_below="@id/rl_first"
                    android:background="@drawable/bg_alibuybutton"
                    android:focusable="true" >

                    <ImageView
                        android:id="@+id/fif_iv_smallicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/setting_lg_no_selected_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="￥5"
                        android:textColor="@color/tab_yellow"
                        android:textSize="20dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_six"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignLeft="@id/rl_third"
                    android:layout_below="@id/rl_first"
                    android:background="@drawable/bg_alibuybutton"
                    android:focusable="true" >

                    <ImageView
                        android:id="@+id/six_iv_smallicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/setting_lg_no_selected_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="￥1"
                        android:textColor="@color/tab_yellow"
                        android:textSize="20dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/cz_tv_czk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_fourth"
                    android:text="充值卡…"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/cz_bt_czk"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/rl_fourth"
                    android:layout_toRightOf="@id/cz_tv_czk"
                    android:background="@drawable/bg_alibuybutton"
                    android:text="我有充值卡"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/cz_tv_ts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_fourth"
                    android:layout_toRightOf="@id/cz_bt_czk"
                    android:text="任何充值问题请致电："
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/cz_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_fourth"
                    android:layout_toRightOf="@id/cz_tv_ts"
                    android:text="400187"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"
                    android:src="@drawable/erweima" />

                <TextView
                    android:id="@+id/cz_tv_ts_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cz_tv_cz"
                    android:text="扫微信二维码支付￥20.00"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/cz_tv_qh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cz_tv_cz"
                    android:text="切换支付宝"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/cz_tv_yj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cz_tv_cz"
                    android:drawableLeft="@drawable/ic_launcher"
                    android:text="一键支付"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yh_hy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="8dp"
            android:layout_weight="4"
            android:background="@color/ov_bg"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="成为全球播会员你将享有会员价观看影片和更多观景特权！"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5" >

                <Button
                    android:id="@+id/hy_3y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="899元"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/hy_5y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/hy_3y"
                    android:text="1199元"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/hy_1m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hy_3y"
                    android:text="30元"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/hy_3m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hy_3y"
                    android:layout_toRightOf="@id/hy_1m"
                    android:text="88元"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/hy_5y"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yh_xx"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/d" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yh_qb"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/e" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yh_gd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/gd_jl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bottomfouc"
                    android:drawableTop="@drawable/ic_launcher"
                    android:text="观看记录"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/gd_gy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bottomfouc"
                    android:drawableTop="@drawable/ic_launcher"
                    android:text="关于"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/gd_fk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bottomfouc"
                    android:drawableTop="@drawable/ic_launcher"
                    android:text="问题反馈"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/gd_bz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bottomfouc"
                    android:drawableTop="@drawable/ic_launcher"
                    android:text="帮助"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_jc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@drawable/d"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="升级会员"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/sf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_bottomfouc"
            android:text="首发影院"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/yh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottomfouc"
            android:text="用户中心"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/jc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_bottomfouc"
            android:text="精彩片花"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>